# Safety Report MCP 서버 환경 변수

# 기본 설정
NODE_ENV=development
TZ=Asia/Seoul

# 템플릿 설정
TEMPLATE_ID_DEFAULT=industrial_safety_v1_kr
TEMPLATE_PATH=templates/layout.html

# 법령 API 설정 (선택사항)
LAW_API_BASE_URL=https://www.law.go.kr/DRF/lawSearch.do
LAW_API_KEY=your_api_key_here

# PDF 렌더링 설정
PDF_TIMEOUT=60000
PDF_MAX_PAGES=50

# 웹 스냅샷 설정
WEB_SNAPSHOT_TIMEOUT=10000
WEB_SNAPSHOT_MAX_CHARS=5000

# 로깅 설정
LOG_LEVEL=info
LOG_FORMAT=json
