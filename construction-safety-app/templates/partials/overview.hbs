<div class="form-section overview-section">
    <h3>🏢 프로젝트 정보</h3>
    <div class="overview-grid">
        <div class="overview-item">
            <label>프로젝트명</label>
            <span class="project-name">{{projectName}}</span>
        </div>
        <div class="overview-item">
            <label>프로젝트 위치</label>
            <span>{{projectLocation}}</span>
        </div>
        <div class="overview-item">
            <label>프로젝트 유형</label>
            <span>{{projectType}}</span>
        </div>
        <div class="overview-item">
            <label>시공사</label>
            <span>{{contractor}}</span>
        </div>
        <div class="overview-item">
            <label>지도일</label>
            <span>{{dateFmt guidanceDate "YYYY-MM-DD"}}</span>
        </div>
        <div class="overview-item">
            <label>지도유형</label>
            <span>{{guidanceType}}</span>
        </div>
        <div class="overview-item">
            <label>지도자</label>
            <span>{{inspector}}</span>
        </div>
        <div class="overview-item">
            <label>지도시간</label>
            <span>{{guidanceDuration}}</span>
        </div>
    </div>
</div>
