# 🚀 프로젝트 TT 환경변수 설정

## 📋 서버 설정
PORT=3000
API_PORT=3001
NODE_ENV=development

## 🔧 Chrome/Puppeteer 설정
CHROME_PATH=/usr/bin/google-chrome
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome
MAX_CONCURRENT_RENDERS=3

## 📊 성능 모니터링 설정 (프로젝트 TT 가이드라인)
# PDF 렌더링 성능 가드 (10페이지 ≤ 2초)
PDF_10_PAGES_TARGET=2000
PERFORMANCE_WARNING_THRESHOLD=1500
PERFORMANCE_CRITICAL_THRESHOLD=3000

# 에러율 알림 설정 (5분 실패율 > 2%)
ERROR_RATE_WARNING_THRESHOLD=0.02
ERROR_RATE_CRITICAL_THRESHOLD=0.05
ERROR_RATE_MONITORING_WINDOW=300000
ERROR_RATE_ALERT_COOLDOWN=120000

## 📝 사용자 진단 로그 설정
USER_DIAGNOSTICS_ENABLED=true
USER_LOG_LEVEL=info
USER_DIAGNOSTICS_MAX_ENTRIES=100

## 🔔 알림 설정
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_EMAIL_ENABLED=false
ALERT_SMS_ENABLED=false

## 🌐 HTTP 설정
HTTP_BASE_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

## 📈 로깅 설정
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

## 🔐 보안 설정
SESSION_SECRET=your-super-secret-session-key
JWT_SECRET=your-jwt-secret-key
API_KEY_HEADER=X-API-Key

## 🗄️ 데이터베이스 설정 (향후 확장용)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=safety_reports
DB_USER=postgres
DB_PASSWORD=password

## 📊 메트릭스 설정
METRICS_ENABLED=true
METRICS_RETENTION_DAYS=30
METRICS_AGGREGATION_INTERVAL=60000

## 🚀 개발 도구 설정
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_PROFILING=false
ENABLE_TRACING=false

## 🌍 국제화 설정
DEFAULT_LOCALE=ko-KR
SUPPORTED_LOCALES=ko-KR,en-US
TIMEZONE=Asia/Seoul

## 📱 PWA 설정
PWA_ENABLED=true
PWA_CACHE_STRATEGY=network-first
PWA_OFFLINE_FALLBACK=true

## 🔍 모니터링 및 알림
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
PERFORMANCE_MONITORING_INTERVAL=60000
ERROR_RATE_MONITORING_INTERVAL=30000

## 📋 사용법
# 1. 이 파일을 .env로 복사
# cp env.example .env

# 2. 필요한 값들을 설정
# 3. 서버 재시작

## ⚠️ 주의사항
# - 실제 운영 환경에서는 민감한 정보를 환경변수로 설정
# - .env 파일은 절대 Git에 커밋하지 마세요
# - 프로덕션에서는 보안 강화된 설정 사용
