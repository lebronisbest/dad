{
  "name": "safety-report-app",
  "version": "1.0.0",
  "description": "산업안전보고서 앱과 MCP 서버 통합 MVP",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm:api\" \"npm:mcp\"",
    "api": "node ./adapters/http/server.js",
    "mcp": "node ./adapters/mcp/mcp_server.js",
    "webapp": "node web_server.js",
    "build": "npm run react:build && npm run build:tailwind",
    "react:dev": "vite",
    "react:build": "vite build",
    "react:preview": "vite preview",
    "build:tailwind": "tailwindcss -i ./tw.input.css -o ./templates/print.tailwind.css --minify",
    "build:tailwind:watch": "tailwindcss -i ./tw.input.css -o ./templates/print.tailwind.css --watch",
    "lint": "eslint .",
    "test": "vitest run",
    "test:snapshot": "node test/routes.snapshot.test.js",
    "test:e2e": "echo 'E2E 테스트를 실행하세요.'",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:legacy": "node scripts/check-legacy-apis.js",
    "orchestrator:dev": "node orchestrator/index.mjs",
    "orchestrator:http": "node orchestrator/http.mjs",
    "orchestrator:test": "node orchestrator/index.mjs \"강남구 신축아파트 안전점검 보고서 PDF 초안 만들어줘\"",
    "agent:stdio": "node agents/stdio.mjs",
    "monitor:usage": "node scripts/monitor-usage.js",
    "monitor:start": "npm run monitor:usage && echo '사용량 모니터링이 시작되었습니다. 2주간 0-hit를 확인하세요.'",
    "monitor:report": "npm run monitor:usage > reports/usage-report-$(date +%Y%m%d).txt",
    "cleanup:check": "npm run monitor:usage && echo '정리 조건을 확인하세요.'",
    "cleanup:deprecated": "echo '모든 V2 코드에 @deprecated 주석이 추가되었습니다.'",
    "cleanup:remove": "echo '⚠️  주의: 이 명령어는 V2 코드를 완전히 제거합니다. 0-hit 증빙 후 실행하세요.'",
    "test:visual": "echo '시각 회귀 테스트를 실행하세요.'",
    "analyze:bundle": "echo '번들 크기 분석을 실행하세요.'",
    "compare:bundles": "echo '번들 크기 비교를 실행하세요.'",
    "rollback:flags": "echo '플래그 기반 롤백을 실행하세요.'",
    "rollback:code": "echo 'Git 기반 롤백을 실행하세요.'",
    "rollback:data": "echo '데이터 롤백을 실행하세요.'",
    "start": "npm run build && npm run webapp",
    "start:dev": "npm run build && npm run dev",
    "cleanup": "node scripts/cleanup-deprecated-apis.js",
    "rollback": "node scripts/rollback.js",
    "monitor": "node scripts/monitor-usage.js"
  },
  "keywords": [
    "mcp",
    "safety",
    "report",
    "pdf",
    "cursor"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@langchain/openai": "^0.6.9",
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@mui/icons-material": "^7.3.1",
    "@mui/lab": "^7.0.0-beta.16",
    "@mui/material": "^7.3.1",
    "@mui/x-charts": "^8.10.2",
    "@mui/x-data-grid": "^8.10.2",
    "@mui/x-date-pickers": "^8.10.2",
    "@mui/x-tree-view": "^8.10.2",
    "@openai/agents": "^0.0.17",
    "@tanstack/react-query": "^5.85.5",
    "ajv": "^8.17.1",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "framer-motion": "^12.23.12",
    "joi": "^17.11.0",
    "langchain": "^0.3.31",
    "lucide-react": "^0.263.1",
    "moment": "^2.29.4",
    "multer": "^2.0.2",
    "openai": "^5.15.0",
    "p-limit": "^7.1.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "puppeteer": "^21.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.30.1",
    "recharts": "^3.1.2",
    "sanitize-html": "^2.11.0",
    "sharp": "^0.34.3",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.0",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.2",
    "vite": "^4.4.0",
    "vitest": "^3.2.4"
  }
}
